    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "yamljs": "^0.3.0",
    "zod": "^3.25.75"
